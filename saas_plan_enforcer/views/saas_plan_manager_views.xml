<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form View -->
    <record id="view_saas_plan_manager_form" model="ir.ui.view">
        <field name="name">saas.plan.manager.form</field>
        <field name="model">saas.plan.manager</field>
        <field name="arch" type="xml">
            <form string="Plan Limits Cache">
                <header>
                    <button name="action_refresh_limits" string="üîÑ Refresh Limits"
                            type="object" class="btn-primary"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>Plan Limits Information</h1>
                    </div>

                    <group>
                        <group string="Cache Info">
                            <field name="cached_plan_name" readonly="1"/>
                            <field name="last_sync" readonly="1"/>
                        </group>
                        <group string="Limits">
                            <field name="cached_limits" readonly="1" widget="text"/>
                        </group>
                    </group>

                    <div class="alert alert-info" style="margin: 20px;">
                        <h4>‚ÑπÔ∏è About Plan Limits</h4>
                        <p>
                            This module queries your subscription limits from the main server.
                            The cache refreshes automatically every hour or when you click "Refresh Limits".
                        </p>
                        <p>
                            The system automatically identifies this instance using its database name
                            to retrieve the correct plan limits.
                        </p>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_saas_plan_manager" model="ir.actions.act_window">
        <field name="name">Plan Limits</field>
        <field name="res_model">saas.plan.manager</field>
        <field name="view_mode">form</field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_saas_plan_limits_root"
              name="Plan Info"
              sequence="100"/>

    <menuitem id="menu_saas_plan_limits"
              name="My Plan Limits"
              parent="menu_saas_plan_limits_root"
              action="action_saas_plan_manager"
              sequence="10"/>
</odoo>
